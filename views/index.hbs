<h1>YouTube Transcript Downloader</h1>

<div>
  {{#if error}}
      <p>{{error}}</p>
  {{/if}}
</div>

<div>
  <form method="GET" action="/download">
    <input type="text" placeholder="Video URL" name="url" value="{{url}}">
    <input type="submit" value="Download">
  </form>
</div>

<div>
  {{#if transcript}}
    <h3>Transcript</h3>
    <ul>
      {{#transcript}}
        <li>{{timestamp}} - {{text}}</li>
      {{/transcript}}
    </ul>
  {{/if}}
</div>